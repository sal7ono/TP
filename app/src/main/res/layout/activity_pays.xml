<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pays"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.salah.tp1.pays">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        app:srcCompat="@drawable/img" />

    <Button
        android:id="@+id/choisir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="20dp"
        android:text="Choisir" />

    <Button
        android:id="@+id/annuler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/choisir"
        android:background="@android:color/holo_orange_dark"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:text="Annuler" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignStart="@+id/annuler"
        android:layout_marginBottom="96dp"
        android:text="Angleterre" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignTop="@+id/textView"
        android:layout_marginTop="35dp"
        android:text="Capitale :" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="Langue :" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/choisir"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:text="L'Angleterre (en anglais England) est une nation constitutive du Royaume-Uni. Elle est bordée par l'Écosse au nord et le pays de Galles à l'ouest"
        android:textColor="#0efc2e" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/annuler"
        android:text="Londres"
        android:textColor="#f23fff" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView2"
        android:text="Anglais"
        android:textColor="#f23fff" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/choisir"
        android:layout_marginBottom="18dp"
        app:srcCompat="@drawable/telechargement" />

</RelativeLayout>
